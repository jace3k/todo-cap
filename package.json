  "engines": {
    "node": "18"
  },
  "scripts": {
    "start": "cds-serve",
    "deploy": "cds deploy --to hana:jacek_container",
    "watch:hybrid": "cds watch --profile hybrid",
    "watch-webapp": "cds watch --open webapp/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "cds": {
    "build": {
      "tasks": [
        {
          "for": "hana",
          "dest": "../db"
        },
        {
          "for": "node-cf"
        }
      ]
    },
    "requires": {
      "db": "hana"
    }
  },
  "sapux": [
    "app/webapp"
  ]
